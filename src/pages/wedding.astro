    --color-border: #e8e6e3;
    --color-shadow: rgba(0, 0, 0, 0.05);
    --color-shadow-hover: rgba(0, 0, 0, 0.1);
    --color-lavender-shadow: rgba(177, 156, 217, 0.2);
