---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <link rel="stylesheet" href="/styles/fonts.css" />
  
  <main class="wedding-invitation">
    <!-- Decorative SVG Background Elements -->
    <div class="background-elements">
      <!-- Floating Hearts -->
      <svg class="heart heart-1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
      </svg>
      <svg class="heart heart-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
      </svg>
      <svg class="heart heart-3" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
      </svg>
      
      <!-- Decorative Flowers -->
      <svg class="flower flower-1" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="8" fill="currentColor" opacity="0.6"/>
        <path d="M50 20 L55 45 L80 50 L55 55 L50 80 L45 55 L20 50 L45 45 Z" fill="none" stroke="currentColor" stroke-width="2" opacity="0.4"/>
        <circle cx="50" cy="30" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="50" cy="70" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="30" cy="50" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="70" cy="50" r="3" fill="currentColor" opacity="0.5"/>
      </svg>
      
      <svg class="flower flower-2" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <circle cx="50" cy="50" r="8" fill="currentColor" opacity="0.6"/>
        <path d="M50 20 L55 45 L80 50 L55 55 L50 80 L45 55 L20 50 L45 45 Z" fill="none" stroke="currentColor" stroke-width="2" opacity="0.4"/>
        <circle cx="50" cy="30" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="50" cy="70" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="30" cy="50" r="3" fill="currentColor" opacity="0.5"/>
        <circle cx="70" cy="50" r="3" fill="currentColor" opacity="0.5"/>
      </svg>

      <!-- Sparkles/Stars -->
      <div class="sparkles">
        <svg class="sparkle sparkle-1" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
        <svg class="sparkle sparkle-2" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
        <svg class="sparkle sparkle-3" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
        <svg class="sparkle sparkle-4" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
        <svg class="sparkle sparkle-5" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
        <svg class="sparkle sparkle-6" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
        </svg>
      </div>
    </div>

    <!-- Main Content -->
    <div class="invitation-container">
      <!-- Glowing Ornamental Frame -->
      <div class="ornamental-frame">
        <svg class="frame-corner frame-top-left" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <path d="M0,0 L0,40 Q0,50 10,50 L40,50 Q50,50 50,60 L50,100" fill="none" stroke="currentColor" stroke-width="2"/>
          <circle cx="25" cy="25" r="3" fill="currentColor"/>
          <circle cx="35" cy="35" r="2" fill="currentColor"/>
        </svg>
        <svg class="frame-corner frame-top-right" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <path d="M100,0 L100,40 Q100,50 90,50 L60,50 Q50,50 50,60 L50,100" fill="none" stroke="currentColor" stroke-width="2"/>
          <circle cx="75" cy="25" r="3" fill="currentColor"/>
          <circle cx="65" cy="35" r="2" fill="currentColor"/>
        </svg>
        <svg class="frame-corner frame-bottom-left" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <path d="M0,100 L0,60 Q0,50 10,50 L40,50 Q50,50 50,40 L50,0" fill="none" stroke="currentColor" stroke-width="2"/>
          <circle cx="25" cy="75" r="3" fill="currentColor"/>
          <circle cx="35" cy="65" r="2" fill="currentColor"/>
        </svg>
        <svg class="frame-corner frame-bottom-right" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
          <path d="M100,100 L100,60 Q100,50 90,50 L60,50 Q50,50 50,40 L50,0" fill="none" stroke="currentColor" stroke-width="2"/>
          <circle cx="75" cy="75" r="3" fill="currentColor"/>
          <circle cx="65" cy="65" r="2" fill="currentColor"/>
        </svg>
      </div>

      <!-- Top Decorative Border -->
      <svg class="border-top" viewBox="0 0 800 120" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="goldGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:currentColor;stop-opacity:0.3" />
            <stop offset="50%" style="stop-color:currentColor;stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:currentColor;stop-opacity:0.3" />
          </linearGradient>
          <filter id="glow">
            <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>
        <path d="M0,60 Q100,20 200,60 T400,60 T600,60 T800,60" fill="none" stroke="url(#goldGradient)" stroke-width="2" filter="url(#glow)"/>
        <path d="M0,60 Q100,30 200,60 T400,60 T600,60 T800,60" fill="none" stroke="currentColor" stroke-width="1" opacity="0.2"/>
        <circle cx="100" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="200" cy="60" r="4" fill="currentColor" opacity="0.4">
          <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="300" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="400" cy="60" r="6" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.6;1;0.6" dur="1.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="500" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="600" cy="60" r="4" fill="currentColor" opacity="0.4">
          <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="700" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <!-- Decorative flourishes -->
        <path d="M50,60 Q60,50 70,60 Q80,70 90,60" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
        <path d="M710,60 Q720,50 730,60 Q740,70 750,60" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
      </svg>

      <!-- Names Section -->
      <div class="names-section">
        <div class="name-wrapper name-wrapper-1">
          <div class="name-full">
            <span class="name-prefix">Mohammad</span>
            <span class="name-main">Javad</span>
            <span class="name-suffix">Bathaei</span>
          </div>
          <div class="name-glow"></div>
          <!-- Sparkles around name -->
          <svg class="name-sparkle sparkle-left" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
          <svg class="name-sparkle sparkle-right" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
        </div>
        <svg class="connecting-hearts" viewBox="0 0 200 80" xmlns="http://www.w3.org/2000/svg">
          <defs>
            <linearGradient id="heartGradient" x1="0%" y1="0%" x2="100%" y2="0%">
              <stop offset="0%" style="stop-color:currentColor;stop-opacity:0.3" />
              <stop offset="50%" style="stop-color:currentColor;stop-opacity:0.8" />
              <stop offset="100%" style="stop-color:currentColor;stop-opacity:0.3" />
            </linearGradient>
            <filter id="heartGlow">
              <feGaussianBlur stdDeviation="2" result="coloredBlur"/>
              <feMerge>
                <feMergeNode in="coloredBlur"/>
                <feMergeNode in="SourceGraphic"/>
              </feMerge>
            </filter>
          </defs>
          <path d="M100,40 Q110,25 120,40 Q130,25 140,40 Q150,25 160,40 Q170,25 180,40" fill="none" stroke="url(#heartGradient)" stroke-width="2.5" filter="url(#heartGlow)"/>
          <path d="M20,40 Q30,25 40,40 Q50,25 60,40 Q70,25 80,40 Q90,25 100,40" fill="none" stroke="url(#heartGradient)" stroke-width="2.5" filter="url(#heartGlow)"/>
          <circle cx="100" cy="40" r="10" fill="currentColor" opacity="0.7" filter="url(#heartGlow)">
            <animate attributeName="r" values="10;12;10" dur="2s" repeatCount="indefinite"/>
            <animate attributeName="opacity" values="0.7;1;0.7" dur="2s" repeatCount="indefinite"/>
          </circle>
          <path d="M95,40 Q95,28 100,33 Q105,28 105,40 Q105,52 100,47 Q95,52 95,40" fill="currentColor" opacity="0.8" filter="url(#heartGlow)">
            <animate attributeName="opacity" values="0.8;1;0.8" dur="2s" repeatCount="indefinite"/>
          </path>
          <!-- Small hearts along the path -->
          <path d="M50,40 Q50,30 55,35 Q60,30 60,40 Q60,50 55,45 Q50,50 50,40" fill="currentColor" opacity="0.5">
            <animate attributeName="opacity" values="0.5;0.9;0.5" dur="3s" repeatCount="indefinite"/>
          </path>
          <path d="M150,40 Q150,30 155,35 Q160,30 160,40 Q160,50 155,45 Q150,50 150,40" fill="currentColor" opacity="0.5">
            <animate attributeName="opacity" values="0.5;0.9;0.5" dur="3s" repeatCount="indefinite" begin="1s"/>
          </path>
        </svg>
        <div class="name-wrapper name-wrapper-2">
          <div class="name-full">
            <span class="name-main">Shaghayegh</span>
            <span class="name-suffix">Zolghadri</span>
          </div>
          <div class="name-glow"></div>
          <!-- Sparkles around name -->
          <svg class="name-sparkle sparkle-left" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
          <svg class="name-sparkle sparkle-right" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 2L13.09 8.26L19 7L14.91 12.74L20 14L13.09 15.74L12 22L10.91 15.74L4 14L9.09 12.74L4 7L10.91 8.26L12 2Z" fill="currentColor"/>
          </svg>
        </div>
      </div>

      <!-- Divider with Decorative Elements -->
      <svg class="divider" viewBox="0 0 600 80" xmlns="http://www.w3.org/2000/svg">
        <path d="M0,40 Q150,20 300,40 T600,40" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.4"/>
        <path d="M0,40 Q150,60 300,40 T600,40" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.4"/>
        <circle cx="150" cy="40" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.8;0.5" dur="3s" repeatCount="indefinite"/>
        </circle>
        <circle cx="300" cy="40" r="6" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.6;1;0.6" dur="3s" repeatCount="indefinite"/>
        </circle>
        <circle cx="450" cy="40" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.8;0.5" dur="3s" repeatCount="indefinite"/>
        </circle>
      </svg>

      <!-- Invitation Text -->
      <div class="invitation-text">
        <p class="intro-text">With great joy and happiness,</p>
        <p class="main-text">we invite you to celebrate</p>
        <p class="main-text">our special day</p>
      </div>

      <!-- Date and Time Section -->
      <div class="details-section">
        <div class="detail-item">
          <svg class="detail-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <rect x="3" y="4" width="18" height="18" rx="2" fill="none" stroke="currentColor" stroke-width="2"/>
            <line x1="8" y1="2" x2="8" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <line x1="16" y1="2" x2="16" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <line x1="3" y1="10" x2="21" y2="10" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="15" r="1" fill="currentColor"/>
            <circle cx="16" cy="15" r="1" fill="currentColor"/>
            <circle cx="12" cy="19" r="1" fill="currentColor"/>
          </svg>
          <div class="detail-content">
            <div class="detail-label">Date</div>
            <div class="detail-value">Friday, 28 november 2025 (7 Azar 1405)</div>
          </div>
        </div>

        <div class="detail-item">
          <svg class="detail-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
            <line x1="12" y1="12" x2="12" y2="6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
            <line x1="12" y1="12" x2="16" y2="12" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
          </svg>
          <div class="detail-content">
            <div class="detail-label">Time</div>
            <div class="detail-value">8:00 PM until 11:00 PM</div>
          </div>
        </div>

        <div class="detail-item">
          <svg class="detail-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z" fill="none" stroke="currentColor" stroke-width="2"/>
            <circle cx="12" cy="10" r="3" fill="none" stroke="currentColor" stroke-width="2"/>
          </svg>
          <div class="detail-content">
            <div class="detail-label">Location</div>
            <div class="detail-value">Hoveizeh Wedding Hall</div>
            <div class="detail-subvalue">Baghestan avenue, Poonak, Tehran, Iran</div>
          </div>
        </div>
      </div>

      <!-- Decorative Bottom Border -->
      <svg class="border-bottom" viewBox="0 0 800 120" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="goldGradientBottom" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:currentColor;stop-opacity:0.3" />
            <stop offset="50%" style="stop-color:currentColor;stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:currentColor;stop-opacity:0.3" />
          </linearGradient>
          <filter id="glowBottom">
            <feGaussianBlur stdDeviation="3" result="coloredBlur"/>
            <feMerge>
              <feMergeNode in="coloredBlur"/>
              <feMergeNode in="SourceGraphic"/>
            </feMerge>
          </filter>
        </defs>
        <path d="M0,60 Q100,90 200,60 T400,60 T600,60 T800,60" fill="none" stroke="url(#goldGradientBottom)" stroke-width="2" filter="url(#glowBottom)"/>
        <path d="M0,60 Q100,80 200,60 T400,60 T600,60 T800,60" fill="none" stroke="currentColor" stroke-width="1" opacity="0.2"/>
        <circle cx="100" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="200" cy="60" r="4" fill="currentColor" opacity="0.4">
          <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="300" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="400" cy="60" r="6" fill="currentColor" opacity="0.6">
          <animate attributeName="opacity" values="0.6;1;0.6" dur="1.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="500" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="600" cy="60" r="4" fill="currentColor" opacity="0.4">
          <animate attributeName="opacity" values="0.4;0.8;0.4" dur="2.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="700" cy="60" r="5" fill="currentColor" opacity="0.5">
          <animate attributeName="opacity" values="0.5;0.9;0.5" dur="2s" repeatCount="indefinite"/>
        </circle>
        <!-- Decorative flourishes -->
        <path d="M50,60 Q60,70 70,60 Q80,50 90,60" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
        <path d="M710,60 Q720,70 730,60 Q740,50 750,60" fill="none" stroke="currentColor" stroke-width="1.5" opacity="0.3"/>
      </svg>

      <!-- Closing Message -->
      <div class="closing-message">
        <p>We look forward to sharing</p>
        <p>this beautiful moment with you</p>
        <div class="signature">
          <p>With love,</p>
          <p class="signature-names">Mohammad Javad & Shaghayegh</p>
        </div>
      </div>

      <!-- Bottom Decorative Hearts -->
      <div class="bottom-hearts">
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
        </svg>
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
        </svg>
        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z" fill="currentColor"/>
        </svg>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    /* OKLCH Color Palette - Elegant Wedding Colors */
    --color-gold: oklch(75% 0.15 85);
    --color-gold-light: oklch(82% 0.12 85);
    --color-gold-dark: oklch(68% 0.18 85);
    
    --color-rose: oklch(50% 0.08 330);
    --color-rose-light: oklch(60% 0.06 330);
    --color-rose-dark: oklch(42% 0.10 330);
    
    --color-purple: oklch(55% 0.06 300);
    --color-purple-light: oklch(65% 0.05 300);
    
    --color-pink-bg: oklch(96% 0.02 330);
    --color-lavender-bg: oklch(95% 0.02 280);
    --color-mint-bg: oklch(96% 0.02 150);
    
    --color-white: oklch(100% 0 0);
    --color-white-soft: oklch(98% 0.005 0);
    
    --color-shadow: oklch(0% 0 0 / 0.1);
    --color-shadow-gold: oklch(68% 0.18 85 / 0.2);
  }

  .wedding-invitation {
    min-height: 100vh;
    min-height: 100dvh; /* Dynamic viewport height for mobile */
    background: linear-gradient(
      135deg,
      oklch(96% 0.02 330) 0%,
      oklch(97% 0.015 15) 25%,
      oklch(97% 0.015 25) 50%,
      oklch(96% 0.02 280) 75%,
      oklch(96% 0.02 150) 100%
    );
    position: relative;
    overflow-x: hidden;
    overflow-y: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(1rem, 3vw, 2rem);
    font-family: "title-font", serif;
  }

  /* Background Floating Elements */
  .background-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
  }

  .heart {
    position: absolute;
    color: var(--color-gold);
    opacity: 0.25;
    width: clamp(40px, 5vw, 60px);
    height: clamp(40px, 5vw, 60px);
  }

  .heart-1 {
    top: 10%;
    left: 10%;
    animation: float1 8s ease-in-out infinite;
  }

  .heart-2 {
    top: 60%;
    right: 15%;
    width: clamp(50px, 6vw, 80px);
    height: clamp(50px, 6vw, 80px);
    animation: float2 10s ease-in-out infinite;
  }

  .heart-3 {
    bottom: 20%;
    left: 20%;
    width: clamp(35px, 4vw, 50px);
    height: clamp(35px, 4vw, 50px);
    animation: float3 12s ease-in-out infinite;
  }

  .flower {
    position: absolute;
    color: var(--color-rose-light);
    width: clamp(60px, 8vw, 100px);
    height: clamp(60px, 8vw, 100px);
    opacity: 0.18;
  }

  .flower-1 {
    top: 30%;
    right: 10%;
    animation: rotate 20s linear infinite;
  }

  .flower-2 {
    bottom: 30%;
    left: 10%;
    animation: rotate 25s linear infinite reverse;
  }

  /* Sparkles Background */
  .sparkles {
    position: absolute;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .sparkle {
    position: absolute;
    color: var(--color-gold);
    opacity: 0;
    width: clamp(20px, 3vw, 30px);
    height: clamp(20px, 3vw, 30px);
    animation: sparkleTwinkle 4s ease-in-out infinite;
  }

  .sparkle-1 {
    top: 15%;
    left: 20%;
    animation-delay: 0s;
  }

  .sparkle-2 {
    top: 40%;
    right: 25%;
    animation-delay: 1s;
  }

  .sparkle-3 {
    bottom: 30%;
    left: 30%;
    animation-delay: 2s;
  }

  .sparkle-4 {
    top: 70%;
    right: 20%;
    animation-delay: 0.5s;
  }

  .sparkle-5 {
    top: 25%;
    right: 40%;
    animation-delay: 1.5s;
  }

  .sparkle-6 {
    bottom: 50%;
    left: 50%;
    animation-delay: 2.5s;
  }

  /* Ornamental Frame */
  .ornamental-frame {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }

  .frame-corner {
    position: absolute;
    width: clamp(60px, 8vw, 100px);
    height: clamp(60px, 8vw, 100px);
    color: var(--color-gold);
    opacity: 0.4;
    animation: frameGlow 3s ease-in-out infinite;
  }

  .frame-top-left {
    top: clamp(1rem, 2vw, 1.5rem);
    left: clamp(1rem, 2vw, 1.5rem);
    animation-delay: 0s;
  }

  .frame-top-right {
    top: clamp(1rem, 2vw, 1.5rem);
    right: clamp(1rem, 2vw, 1.5rem);
    animation-delay: 0.5s;
  }

  .frame-bottom-left {
    bottom: clamp(1rem, 2vw, 1.5rem);
    left: clamp(1rem, 2vw, 1.5rem);
    animation-delay: 1s;
  }

  .frame-bottom-right {
    bottom: clamp(1rem, 2vw, 1.5rem);
    right: clamp(1rem, 2vw, 1.5rem);
    animation-delay: 1.5s;
  }

  /* Main Container */
  .invitation-container {
    max-width: min(800px, 95vw);
    width: 100%;
    background: oklch(100% 0 0 / 0.96);
    backdrop-filter: blur(10px);
    border-radius: clamp(15px, 2vw, 20px);
    padding: clamp(2rem, 5vw, 4rem) clamp(1.5rem, 4vw, 3rem);
    box-shadow: 
      0 20px 60px oklch(0% 0 0 / 0.08),
      0 0 0 1px oklch(95% 0.01 0 / 0.5);
    position: relative;
    z-index: 1;
    animation: fadeInUp 1s ease-out;
    margin: auto;
  }

  /* Borders */
  .border-top,
  .border-bottom {
    width: 100%;
    height: clamp(80px, 10vw, 120px);
    color: var(--color-gold);
    margin: clamp(1.5rem, 3vw, 2rem) 0;
    animation: shimmer 3s ease-in-out infinite;
    filter: drop-shadow(0 2px 8px oklch(75% 0.15 85 / 0.2));
  }

  /* Names Section */
  .names-section {
    text-align: center;
    margin: clamp(2rem, 4vw, 3rem) 0;
    animation: fadeIn 1.5s ease-out;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: clamp(1rem, 2vw, 1.5rem);
  }

  .name-wrapper {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin: 0;
    text-align: center;
  }

  .name-full {
    position: relative;
    display: flex;
    align-items: baseline;
    justify-content: center;
    flex-wrap: wrap;
    gap: clamp(0.3rem, 1vw, 0.5rem);
    z-index: 2;
    line-height: 1.2;
  }

  .name-main {
    font-size: clamp(2rem, 8vw, 4rem);
    font-weight: 700;
    color: var(--color-rose);
    letter-spacing: clamp(2px, 0.5vw, 3px);
    text-shadow: 
      2px 2px 4px var(--color-shadow),
      0 0 20px oklch(75% 0.15 85 / 0.2),
      0 0 40px oklch(75% 0.15 85 / 0.1);
    animation: nameGlow 3s ease-in-out infinite;
    white-space: nowrap;
  }

  .name-prefix,
  .name-suffix {
    font-size: clamp(0.9rem, 2.5vw, 1.4rem);
    font-weight: 500;
    color: var(--color-rose);
    opacity: 0.75;
    letter-spacing: clamp(1px, 0.3vw, 2px);
    text-shadow: 
      1px 1px 2px var(--color-shadow),
      0 0 10px oklch(75% 0.15 85 / 0.15);
    white-space: nowrap;
  }

  .name-prefix {
    margin-right: clamp(0.2rem, 0.5vw, 0.4rem);
  }

  .name-suffix {
    margin-left: clamp(0.2rem, 0.5vw, 0.4rem);
  }

  .name-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 150%;
    height: 150%;
    background: radial-gradient(
      ellipse at center,
      oklch(75% 0.15 85 / 0.3) 0%,
      oklch(75% 0.15 85 / 0.1) 40%,
      transparent 70%
    );
    border-radius: 50%;
    z-index: 1;
    animation: glowPulse 3s ease-in-out infinite;
    pointer-events: none;
  }

  .name-sparkle {
    position: absolute;
    width: clamp(20px, 3vw, 30px);
    height: clamp(20px, 3vw, 30px);
    color: var(--color-gold);
    opacity: 0;
    z-index: 3;
    animation: nameSparkleTwinkle 3s ease-in-out infinite;
  }

  .name-wrapper-1 .sparkle-left {
    left: clamp(-5%, -2vw, -2%);
    top: 50%;
    transform: translateY(-50%);
    animation-delay: 0s;
  }

  .name-wrapper-1 .sparkle-right {
    right: clamp(-5%, -2vw, -2%);
    top: 50%;
    transform: translateY(-50%);
    animation-delay: 1s;
  }

  .name-wrapper-2 .sparkle-left {
    left: clamp(-5%, -2vw, -2%);
    top: 50%;
    transform: translateY(-50%);
    animation-delay: 1.5s;
  }

  .name-wrapper-2 .sparkle-right {
    right: clamp(-5%, -2vw, -2%);
    top: 50%;
    transform: translateY(-50%);
    animation-delay: 0.5s;
  }

  .name-wrapper-1 {
    animation: fadeInLeft 1s ease-out 0.5s both;
  }

  .name-wrapper-2 {
    animation: fadeInRight 1s ease-out 0.7s both;
  }

  .connecting-hearts {
    width: clamp(180px, 30vw, 250px);
    height: clamp(60px, 10vw, 80px);
    margin: clamp(0.75rem, 2vw, 1rem) auto;
    color: var(--color-gold);
    animation: pulse 2s ease-in-out infinite;
    filter: drop-shadow(0 0 8px oklch(75% 0.15 85 / 0.4));
  }

  /* Divider */
  .divider {
    width: 100%;
    height: clamp(60px, 8vw, 80px);
    color: var(--color-gold);
    margin: clamp(2rem, 4vw, 3rem) 0;
  }

  /* Invitation Text */
  .invitation-text {
    text-align: center;
    margin: clamp(2rem, 4vw, 3rem) 0;
    color: var(--color-purple);
    animation: fadeIn 2s ease-out;
  }

  .intro-text {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    font-style: italic;
    margin-bottom: clamp(0.75rem, 2vw, 1rem);
    color: var(--color-rose);
    line-height: 1.6;
  }

  .main-text {
    font-size: clamp(1.3rem, 3.5vw, 1.8rem);
    margin: clamp(0.4rem, 1vw, 0.5rem) 0;
    letter-spacing: clamp(1px, 0.3vw, 2px);
    line-height: 1.5;
  }

  /* Details Section */
  .details-section {
    margin: clamp(2rem, 4vw, 3rem) 0;
    display: flex;
    flex-direction: column;
    gap: clamp(1.25rem, 3vw, 2rem);
    animation: fadeIn 2.5s ease-out;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: clamp(1rem, 2.5vw, 1.5rem);
    padding: clamp(1.25rem, 2.5vw, 1.5rem);
    background: linear-gradient(
      135deg,
      oklch(100% 0 0 / 0.85) 0%,
      oklch(98% 0.005 330 / 0.85) 100%
    );
    border-radius: clamp(12px, 2vw, 15px);
    border-left: clamp(3px, 0.5vw, 4px) solid var(--color-gold);
    transition: transform 0.3s ease, box-shadow 0.3s ease, background 0.3s ease;
  }

  .detail-item:hover {
    transform: translateX(10px);
    box-shadow: 
      0 5px 20px var(--color-shadow-gold),
      0 0 30px oklch(75% 0.15 85 / 0.15);
    background: linear-gradient(
      135deg,
      oklch(100% 0 0 / 0.95) 0%,
      oklch(98% 0.005 330 / 0.95) 100%
    );
    border-left-color: var(--color-gold-light);
  }

  .detail-item:active {
    transform: translateX(5px);
  }

  .detail-icon {
    width: clamp(35px, 5vw, 40px);
    height: clamp(35px, 5vw, 40px);
    color: var(--color-gold);
    flex-shrink: 0;
    filter: drop-shadow(0 0 4px oklch(75% 0.15 85 / 0.3));
    transition: transform 0.3s ease, filter 0.3s ease;
  }

  .detail-item:hover .detail-icon {
    transform: scale(1.1);
    filter: drop-shadow(0 0 8px oklch(75% 0.15 85 / 0.5));
  }

  .detail-content {
    flex: 1;
    min-width: 0; /* Allows text to wrap properly */
  }

  .detail-label {
    font-size: clamp(0.8rem, 2vw, 0.9rem);
    color: var(--color-rose);
    text-transform: uppercase;
    letter-spacing: clamp(0.5px, 0.2vw, 1px);
    margin-bottom: clamp(0.2rem, 0.5vw, 0.3rem);
    font-weight: 600;
    line-height: 1.4;
  }

  .detail-value {
    font-size: clamp(1.1rem, 2.5vw, 1.3rem);
    color: var(--color-purple);
    font-weight: 500;
    line-height: 1.4;
    word-wrap: break-word;
  }

  .detail-subvalue {
    font-size: clamp(0.9rem, 2vw, 1rem);
    color: var(--color-rose);
    margin-top: clamp(0.2rem, 0.5vw, 0.3rem);
    opacity: 0.85;
    line-height: 1.4;
    word-wrap: break-word;
  }

  /* Closing Message */
  .closing-message {
    text-align: center;
    margin: clamp(2rem, 4vw, 3rem) 0;
    color: var(--color-purple);
    animation: fadeIn 3s ease-out;
  }

  .closing-message p {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    margin: clamp(0.4rem, 1vw, 0.5rem) 0;
    font-style: italic;
    line-height: 1.6;
  }

  .signature {
    margin-top: clamp(1.5rem, 3vw, 2rem);
    padding-top: clamp(1.5rem, 3vw, 2rem);
    border-top: 1px solid oklch(75% 0.15 85 / 0.25);
  }

  .signature p {
    margin: clamp(0.4rem, 1vw, 0.5rem) 0;
    font-size: clamp(1rem, 2.2vw, 1.1rem);
  }

  .signature-names {
    font-size: clamp(1.2rem, 3vw, 1.5rem) !important;
    font-weight: 700;
    color: var(--color-rose);
    letter-spacing: clamp(1px, 0.3vw, 2px);
    margin-top: clamp(0.75rem, 2vw, 1rem) !important;
  }

  /* Bottom Hearts */
  .bottom-hearts {
    display: flex;
    justify-content: center;
    gap: clamp(1.25rem, 3vw, 2rem);
    margin-top: clamp(2rem, 4vw, 3rem);
    animation: fadeIn 3.5s ease-out;
    flex-wrap: wrap;
  }

  .bottom-hearts svg {
    width: clamp(25px, 4vw, 30px);
    height: clamp(25px, 4vw, 30px);
    color: var(--color-gold);
    opacity: 0.6;
    animation: heartBeat 2s ease-in-out infinite;
  }

  .bottom-hearts svg:nth-child(2) {
    animation-delay: 0.3s;
  }

  .bottom-hearts svg:nth-child(3) {
    animation-delay: 0.6s;
  }

  /* Animations */
  @keyframes float1 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(30px, -30px) rotate(5deg); }
    66% { transform: translate(-20px, 20px) rotate(-5deg); }
  }

  @keyframes float2 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    33% { transform: translate(-40px, 40px) rotate(-5deg); }
    66% { transform: translate(30px, -30px) rotate(5deg); }
  }

  @keyframes float3 {
    0%, 100% { transform: translate(0, 0) rotate(0deg); }
    50% { transform: translate(20px, -20px) rotate(3deg); }
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(-50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes nameGlow {
    0%, 100% {
      text-shadow: 
        2px 2px 4px var(--color-shadow),
        0 0 20px oklch(75% 0.15 85 / 0.3);
    }
    50% {
      text-shadow: 
        2px 2px 4px var(--color-shadow),
        0 0 30px oklch(75% 0.15 85 / 0.5);
    }
  }

  @keyframes pulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.8;
    }
    50% {
      transform: scale(1.1);
      opacity: 1;
    }
  }

  @keyframes shimmer {
    0%, 100% {
      opacity: 0.3;
    }
    50% {
      opacity: 0.6;
    }
  }

  @keyframes heartBeat {
    0%, 100% {
      transform: scale(1);
    }
    25% {
      transform: scale(1.2);
    }
    50% {
      transform: scale(1);
    }
    75% {
      transform: scale(1.15);
    }
  }

  @keyframes sparkleTwinkle {
    0%, 100% {
      opacity: 0;
      transform: scale(0.5) rotate(0deg);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.2) rotate(180deg);
    }
  }

  @keyframes frameGlow {
    0%, 100% {
      opacity: 0.3;
      filter: drop-shadow(0 0 5px oklch(75% 0.15 85 / 0.3));
    }
    50% {
      opacity: 0.6;
      filter: drop-shadow(0 0 15px oklch(75% 0.15 85 / 0.6));
    }
  }

  @keyframes glowPulse {
    0%, 100% {
      opacity: 0.5;
      transform: translate(-50%, -50%) scale(1);
    }
    50% {
      opacity: 0.8;
      transform: translate(-50%, -50%) scale(1.1);
    }
  }

  @keyframes nameSparkleTwinkle {
    0%, 100% {
      opacity: 0;
      transform: translateY(-50%) scale(0.3) rotate(0deg);
    }
    50% {
      opacity: 1;
      transform: translateY(-50%) scale(1.2) rotate(180deg);
    }
  }

  /* Responsive Design - Mobile First Approach */
  @media (max-width: 640px) {
    .wedding-invitation {
      padding: clamp(0.75rem, 2vw, 1rem);
    }

    .invitation-container {
      padding: clamp(1.5rem, 4vw, 2rem) clamp(1.25rem, 3vw, 1.5rem);
      border-radius: clamp(12px, 2vw, 15px);
    }

    .names-section {
      margin: clamp(1.5rem, 3vw, 2rem) 0;
    }

    .invitation-text {
      margin: clamp(1.5rem, 3vw, 2rem) 0;
    }

    .details-section {
      margin: clamp(1.5rem, 3vw, 2rem) 0;
      gap: clamp(1rem, 2.5vw, 1.25rem);
    }

    .detail-item {
      flex-direction: column;
      text-align: center;
      gap: clamp(0.75rem, 2vw, 1rem);
      padding: clamp(1rem, 2.5vw, 1.25rem);
    }

    .detail-item:hover {
      transform: translateY(-5px);
    }

    .detail-item:active {
      transform: translateY(-2px);
    }

    .detail-icon {
      margin-bottom: 0.5rem;
    }

    .closing-message {
      margin: clamp(1.5rem, 3vw, 2rem) 0;
    }

    .heart-1,
    .heart-2,
    .heart-3 {
      opacity: 0.15;
    }

    .flower-1,
    .flower-2 {
      opacity: 0.12;
    }

    .sparkle {
      opacity: 0;
    }

    .frame-corner {
      width: clamp(40px, 6vw, 60px);
      height: clamp(40px, 6vw, 60px);
      opacity: 0.2;
    }

    .name-sparkle {
      width: clamp(15px, 2.5vw, 20px);
      height: clamp(15px, 2.5vw, 20px);
    }

    .name-full {
      gap: clamp(0.2rem, 0.8vw, 0.4rem);
    }

    .name-main {
      font-size: clamp(1.8rem, 7vw, 3.5rem);
    }

    .name-prefix,
    .name-suffix {
      font-size: clamp(0.8rem, 2vw, 1.2rem);
    }
  }

  @media (max-width: 480px) {
    .wedding-invitation {
      padding: 0.5rem;
    }

    .invitation-container {
      padding: 1.25rem 1rem;
    }

    .border-top,
    .border-bottom {
      height: clamp(40px, 6vw, 60px);
      margin: clamp(1rem, 2vw, 1.5rem) 0;
    }

    .divider {
      height: clamp(40px, 6vw, 60px);
      margin: clamp(1.5rem, 3vw, 2rem) 0;
    }

    .connecting-hearts {
      width: clamp(120px, 20vw, 150px);
      height: clamp(35px, 6vw, 45px);
    }

    .name-full {
      flex-direction: column;
      gap: 0.2rem;
    }

    .name-main {
      font-size: clamp(1.5rem, 6vw, 2.5rem);
    }

    .name-prefix,
    .name-suffix {
      font-size: clamp(0.7rem, 1.8vw, 1rem);
    }

    .name-prefix {
      margin-right: 0;
      margin-bottom: 0.1rem;
    }

    .name-suffix {
      margin-left: 0;
      margin-top: 0.1rem;
    }
  }

  /* Tablet and Medium Screens */
  @media (min-width: 641px) and (max-width: 1024px) {
    .invitation-container {
      max-width: min(700px, 90vw);
    }
  }

  /* Large Screens */
  @media (min-width: 1025px) {
    .invitation-container {
      max-width: 800px;
    }
  }

  /* Landscape Mobile Optimization */
  @media (max-height: 600px) and (orientation: landscape) {
    .wedding-invitation {
      padding: 1rem;
      align-items: flex-start;
    }

    .invitation-container {
      padding: clamp(1.5rem, 3vh, 2.5rem) clamp(1.5rem, 4vw, 2.5rem);
      margin: 1rem auto;
    }

    .names-section {
      margin: clamp(1rem, 2vh, 2rem) 0;
    }

    .invitation-text,
    .details-section,
    .closing-message {
      margin: clamp(1rem, 2vh, 1.5rem) 0;
    }

    .border-top,
    .border-bottom,
    .divider {
      margin: clamp(1rem, 2vh, 1.5rem) 0;
      height: clamp(40px, 6vh, 60px);
    }
  }

  /* Reduced Motion Preference */
  @media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
      animation-duration: 0.01ms !important;
      animation-iteration-count: 1 !important;
      transition-duration: 0.01ms !important;
    }
  }

  /* High Contrast Mode Support */
  @media (prefers-contrast: high) {
    .invitation-container {
      background: oklch(100% 0 0);
      border: 2px solid var(--color-gold);
