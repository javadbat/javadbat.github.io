    justify-content: center;
    padding: clamp(1.5rem, 4vw, 3rem);
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", "Segoe UI", serif;
    font-feature-settings: "kern" 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Elegant Background Pattern */
  .background-pattern {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(139, 115, 85, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(177, 156, 217, 0.04) 0%, transparent 60%);
    background-size: 100% 100%;
    pointer-events: none;
    z-index: 0;
  }

  /* Lavender Decorative Elements */
  .lavender-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .lavender-flower {
    position: absolute;
    color: var(--color-lavender);
    font-size: clamp(2rem, 5vw, 3.5rem);
    opacity: 0.15;
    animation: floatGentle 15s ease-in-out infinite;
  }

  .lavender-flower.flower-1 {
    top: 15%;
    right: 10%;
    animation-delay: 0s;
  }

  .lavender-flower.flower-2 {
    top: 60%;
    left: 8%;
    animation-delay: 5s;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
  }

  .lavender-flower.flower-3 {
    bottom: 20%;
    right: 15%;
    animation-delay: 10s;
    font-size: clamp(1.8rem, 4.5vw, 3rem);
  }

  .lavender-dot {
    position: absolute;
    width: clamp(8px, 1.5vw, 12px);
    height: clamp(8px, 1.5vw, 12px);
    background: var(--color-lavender);
    border-radius: 50%;
    opacity: 0.2;
    animation: floatGentle 12s ease-in-out infinite;
  }

  .lavender-dot.dot-1 {
    top: 25%;
    left: 20%;
    animation-delay: 2s;
  }

  .lavender-dot.dot-2 {
    top: 70%;
    right: 25%;
    animation-delay: 7s;
  }

  .lavender-dot.dot-3 {
    bottom: 30%;
    left: 15%;
    animation-delay: 4s;
  }

  /* Butterflies Container */
  .butterflies-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 5;
    overflow: hidden;
  }

  .butterfly {
    position: absolute;
    width: clamp(40px, 5vw, 60px);
    height: clamp(40px, 5vw, 60px);
    opacity: 0.6;
    filter: drop-shadow(0 2px 4px rgba(177, 156, 217, 0.3));
  }

  /* Butterfly 1 - Diagonal path from top-left to bottom-right */
  .butterfly-1 {
    top: -10%;
    left: -5%;
    animation: butterflyPath1 25s ease-in-out infinite;
    animation-delay: 0s;
  }

  @keyframes butterflyPath1 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.8);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    25% {
      transform: translate(30vw, 25vh) rotate(15deg) scale(1);
    }
    50% {
      transform: translate(60vw, 50vh) rotate(-10deg) scale(0.9);
    }
    75% {
      transform: translate(90vw, 75vh) rotate(20deg) scale(1.1);
    }
    90% {
      opacity: 0.6;
    }
    100% {
      transform: translate(110vw, 110vh) rotate(0deg) scale(0.8);
      opacity: 0;
    }
  }

  /* Butterfly 2 - Curved path from top-right to bottom-left */
  .butterfly-2 {
    top: -10%;
    right: -5%;
    animation: butterflyPath2 30s ease-in-out infinite;
    animation-delay: 5s;
  }

  @keyframes butterflyPath2 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.9);
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    20% {
      transform: translate(-20vw, 30vh) rotate(-20deg) scale(1);
    }
    40% {
      transform: translate(-40vw, 45vh) rotate(25deg) scale(1.1);
    }
    60% {
      transform: translate(-60vw, 60vh) rotate(-15deg) scale(0.95);
    }
    80% {
      transform: translate(-85vw, 80vh) rotate(30deg) scale(1.05);
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: translate(-110vw, 110vh) rotate(0deg) scale(0.9);
      opacity: 0;
    }
  }

  /* Butterfly 3 - Zigzag path from left to right */
  .butterfly-3 {
    top: 40%;
    left: -10%;
    animation: butterflyPath3 28s ease-in-out infinite;
    animation-delay: 10s;
  }

  @keyframes butterflyPath3 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.85);
      opacity: 0;
    }
    10% {
      opacity: 0.55;
    }
    20% {
      transform: translate(25vw, -15vh) rotate(18deg) scale(1);
    }
    35% {
      transform: translate(45vw, 10vh) rotate(-22deg) scale(1.05);
    }
    50% {
      transform: translate(65vw, -8vh) rotate(15deg) scale(0.95);
    }
    65% {
      transform: translate(80vw, 5vh) rotate(-18deg) scale(1.1);
    }
    80% {
      transform: translate(95vw, -3vh) rotate(12deg) scale(1);
    }
    90% {
      opacity: 0.55;
    }
    100% {
      transform: translate(115vw, 0vh) rotate(0deg) scale(0.85);
      opacity: 0;
    }
  }

  /* Butterfly 4 - Wave path from bottom-left to top-right */
  .butterfly-4 {
    bottom: -10%;
    left: -5%;
    animation: butterflyPath4 32s ease-in-out infinite;
    animation-delay: 15s;
  }

  @keyframes butterflyPath4 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.9);
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    25% {
      transform: translate(30vw, -20vh) rotate(-25deg) scale(1.05);
    }
    40% {
      transform: translate(50vw, -35vh) rotate(20deg) scale(0.95);
    }
    55% {
      transform: translate(70vw, -50vh) rotate(-18deg) scale(1.1);
    }
    70% {
      transform: translate(85vw, -65vh) rotate(22deg) scale(1);
    }
    85% {
      transform: translate(100vw, -80vh) rotate(-15deg) scale(0.9);
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: translate(115vw, -110vh) rotate(0deg) scale(0.9);
      opacity: 0;
    }
  }

  /* Realistic wing flapping animation */
  .wing-left-upper,
  .wing-left-lower {
    transform-origin: 50% 50%;
    animation: wingFlapLeft 0.25s ease-in-out infinite;
  }

  .wing-right-upper,
  .wing-right-lower {
    transform-origin: 50% 50%;
    animation: wingFlapRight 0.25s ease-in-out infinite;
  }

  /* Butterfly 1 wing speeds */
  .butterfly-1 .wing-left-upper,
  .butterfly-1 .wing-left-lower {
    animation-duration: 0.25s;
  }

  .butterfly-1 .wing-right-upper,
  .butterfly-1 .wing-right-lower {
    animation-duration: 0.25s;
  }

  /* Butterfly 2 wing speeds */
  .butterfly-2 .wing-left-upper,
  .butterfly-2 .wing-left-lower {
    animation-duration: 0.28s;
    animation-delay: 0.05s;
  }

  .butterfly-2 .wing-right-upper,
  .butterfly-2 .wing-right-lower {
    animation-duration: 0.28s;
    animation-delay: 0.05s;
  }

  /* Butterfly 3 wing speeds */
  .butterfly-3 .wing-left-upper,
  .butterfly-3 .wing-left-lower {
    animation-duration: 0.32s;
    animation-delay: 0.1s;
  }

  .butterfly-3 .wing-right-upper,
  .butterfly-3 .wing-right-lower {
    animation-duration: 0.32s;
    animation-delay: 0.1s;
  }

  /* Butterfly 4 wing speeds */
  .butterfly-4 .wing-left-upper,
  .butterfly-4 .wing-left-lower {
    animation-duration: 0.27s;
    animation-delay: 0.08s;
  }

  .butterfly-4 .wing-right-upper,
  .butterfly-4 .wing-right-lower {
    animation-duration: 0.27s;
    animation-delay: 0.08s;
  }

  /* Left wings flap up and down - more realistic motion */
  @keyframes wingFlapLeft {
    0%, 100% {
      transform: rotate(0deg) scaleY(1) scaleX(1);
    }
    12.5% {
      transform: rotate(-5deg) scaleY(0.98) scaleX(1.01);
    }
    25% {
      transform: rotate(-10deg) scaleY(0.95) scaleX(1.02);
    }
    37.5% {
      transform: rotate(-12deg) scaleY(0.92) scaleX(1.03);
    }
    50% {
      transform: rotate(-15deg) scaleY(0.88) scaleX(1.04);
    }
    62.5% {
      transform: rotate(-12deg) scaleY(0.92) scaleX(1.03);
    }
    75% {
      transform: rotate(-10deg) scaleY(0.95) scaleX(1.02);
    }
    87.5% {
      transform: rotate(-5deg) scaleY(0.98) scaleX(1.01);
    }
  }

  /* Right wings flap opposite direction - synchronized */
  @keyframes wingFlapRight {
    0%, 100% {
      transform: rotate(0deg) scaleY(1) scaleX(1);
    }
    12.5% {
      transform: rotate(5deg) scaleY(0.98) scaleX(1.01);
    }
    25% {
      transform: rotate(10deg) scaleY(0.95) scaleX(1.02);
    }
    37.5% {
      transform: rotate(12deg) scaleY(0.92) scaleX(1.03);
    }
    50% {
      transform: rotate(15deg) scaleY(0.88) scaleX(1.04);
    }
    62.5% {
      transform: rotate(12deg) scaleY(0.92) scaleX(1.03);
    }
    75% {
      transform: rotate(10deg) scaleY(0.95) scaleX(1.02);
    }
    87.5% {
      transform: rotate(5deg) scaleY(0.98) scaleX(1.01);
    }
  }

  /* Main Container */
  .invitation-container {
    max-width: min(700px, 95vw);
    width: 100%;
    background: #ffffff;
    padding: clamp(3rem, 8vw, 5rem) clamp(2rem, 5vw, 4rem);
    box-shadow: 
      0 10px 40px var(--color-shadow),
      0 0 0 1px var(--color-border);
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  /* Elegant Divider */
  .elegant-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: clamp(2rem, 5vw, 3rem) 0;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(
      to left,
      transparent,
      var(--color-lavender) 15%,
      var(--color-secondary) 50%,
      var(--color-lavender) 85%,
      transparent
    );
    opacity: 0.4;
  }

  .divider-ornament {
    color: var(--color-lavender);
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    opacity: 0.6;
    font-weight: 300;
    letter-spacing: 0;
    text-shadow: 0 0 10px var(--color-lavender-shadow);
  }

  /* Header Section */
  .header-section {
    margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
  }

  /* Names Section */
  .names-section {
    text-align: center;
    margin: clamp(2.5rem, 6vw, 4rem) 0;
    animation: fadeIn 1s ease-out 0.2s both;
  }

  .name-block {
    margin: clamp(1.5rem, 4vw, 2.5rem) 0;
  }

  .name-main {
    font-size: clamp(2.2rem, 7vw, 3.5rem);
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-lavender-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.3;
    margin-bottom: 0.5rem;
    letter-spacing: 0;
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", serif;
  }

  .name-surname {
    font-size: clamp(1.4rem, 4vw, 2rem);
    font-weight: 400;
    color: var(--color-text-light);
    line-height: 1.4;
    letter-spacing: 0;
    margin-top: 0.3rem;
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", serif;
  }

  .name-block-1 {
    animation: fadeInLeft 0.8s ease-out 0.4s both;
  }

  .name-block-2 {
    animation: fadeInRight 0.8s ease-out 0.6s both;
  }

  /* Names Connector */
  .names-connector {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: clamp(1.5rem, 4vw, 2.5rem) 0;
    animation: fadeIn 1s ease-out 0.5s both;
  }

  .connector-line {
    width: clamp(60px, 15vw, 100px);
    height: 1px;
    background: linear-gradient(
      to left,
      transparent,
      var(--color-lavender) 30%,
      var(--color-secondary) 50%,
      var(--color-lavender) 70%,
      transparent
    );
    opacity: 0.5;
  }

  .connector-heart {
    color: var(--color-lavender);
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    opacity: 0.7;
    animation: heartPulse 2s ease-in-out infinite;
    text-shadow: 0 0 8px var(--color-lavender-shadow);
  }

  /* Invitation Text */
  .invitation-text {
    text-align: center;
    margin: clamp(2.5rem, 6vw, 4rem) 0;
    color: var(--color-text);
    animation: fadeIn 1.2s ease-out 0.8s both;
  }

  .invitation-line-1 {
    font-size: clamp(1.1rem, 2.8vw, 1.4rem);
    font-weight: 400;
    color: var(--color-text-light);
    margin-bottom: 0.8rem;
    line-height: 1.8;
    font-style: normal;
    letter-spacing: 0;
  }

  .invitation-line-2 {
    font-size: clamp(1.3rem, 3.5vw, 1.7rem);
    font-weight: 500;
    color: var(--color-primary);
    line-height: 1.8;
    letter-spacing: 0;
    position: relative;
  }

  .invitation-line-2::before {
    content: '✿';
    color: var(--color-lavender);
    opacity: 0.4;
    margin-left: 0.5rem;
    font-size: 0.8em;
  }

  .invitation-line-2::after {
    content: '✿';
    color: var(--color-lavender);
    opacity: 0.4;
    margin-right: 0.5rem;
    font-size: 0.8em;
  }

  /* Details Section */
  .details-section {
    margin: clamp(2.5rem, 6vw, 4rem) 0;
    display: flex;
    flex-direction: column;
    gap: clamp(1rem, 2.5vw, 1.5rem);
    animation: fadeIn 1.4s ease-out 1s both;
  }

  .detail-card {
    display: flex;
    align-items: center;
    gap: clamp(1.2rem, 3vw, 1.8rem);
    padding: clamp(1.5rem, 3.5vw, 2rem);
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    text-decoration: none;
    color: inherit;
  }

  .detail-card:hover {
    transform: translateX(-5px);
    box-shadow: 0 4px 20px var(--color-lavender-shadow), 0 2px 8px var(--color-shadow-hover);
    border-color: var(--color-lavender);
    background: linear-gradient(135deg, #ffffff 0%, var(--color-lavender-bg) 100%);
  }

  .detail-card-link:hover {
    cursor: pointer;
  }

  .detail-icon-wrapper {
    flex-shrink: 0;
    width: clamp(45px, 6vw, 55px);
    height: clamp(45px, 6vw, 55px);
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(177, 156, 217, 0.12) 0%, rgba(139, 115, 85, 0.08) 100%);
    border-radius: 50%;
    color: var(--color-lavender-dark);
    border: 1px solid rgba(177, 156, 217, 0.2);
    transition: all 0.3s ease;
  }

  .detail-icon {
    width: clamp(22px, 3vw, 26px);
    height: clamp(22px, 3vw, 26px);
    stroke: currentColor;
  }

  .detail-card:hover .detail-icon-wrapper {
    background: linear-gradient(135deg, rgba(177, 156, 217, 0.25) 0%, rgba(139, 115, 85, 0.15) 100%);
    transform: scale(1.05);
    border-color: var(--color-lavender);
    box-shadow: 0 0 15px var(--color-lavender-shadow);
  }

  .detail-info {
    flex: 1;
    min-width: 0;
  }

  .detail-label {
    font-size: clamp(0.75rem, 1.8vw, 0.85rem);
    color: var(--color-text-light);
    font-weight: 500;
    margin-bottom: 0.4rem;
    letter-spacing: 0;
    text-transform: none;
  }

  .detail-value {
    font-size: clamp(1.1rem, 2.8vw, 1.3rem);
    color: var(--color-primary);
    font-weight: 500;
    line-height: 1.5;
    word-wrap: break-word;
    letter-spacing: 0;
  }

  .detail-subvalue {
    font-size: clamp(0.9rem, 2.2vw, 1rem);
    color: var(--color-text-light);
    margin-top: 0.3rem;
    line-height: 1.5;
    word-wrap: break-word;
    letter-spacing: 0;
  }

  /* Footer Section */
  .footer-section {
    margin-top: clamp(2.5rem, 6vw, 4rem);
    animation: fadeIn 1.6s ease-out 1.2s both;
  }

  .closing-message {
    text-align: center;
    margin-top: clamp(2rem, 5vw, 3rem);
  }

  .closing-text {
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    color: var(--color-text);
    line-height: 1.8;
    margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
    letter-spacing: 0;
    font-style: normal;
  }

  .signature {
    margin-top: clamp(1.5rem, 4vw, 2.5rem);
    padding-top: clamp(1.5rem, 4vw, 2.5rem);
    border-top: 1px solid var(--color-border);
    position: relative;
  }

  .signature::before {
    content: '✿';
    position: absolute;
    top: -0.5rem;
    right: 50%;
    transform: translateX(50%);
    color: var(--color-lavender);
    opacity: 0.5;
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    background: #ffffff;
    padding: 0 0.5rem;
  }

  .signature-text {
    font-size: clamp(0.95rem, 2.3vw, 1.1rem);
    color: var(--color-text-light);
    margin-bottom: 0.5rem;
    letter-spacing: 0;
    font-style: normal;
  }

  .signature-names {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-lavender-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    letter-spacing: 0;
    margin-top: 0.5rem;
  }

  /* Animations */
  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInLeft {
    from {
      opacity: 0;
      transform: translateX(30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes fadeInRight {
    from {
      opacity: 0;
      transform: translateX(-30px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes heartPulse {
    0%, 100% {
      transform: scale(1);
      opacity: 0.7;
    }
    50% {
      transform: scale(1.15);
      opacity: 0.9;
    }
  }

  @keyframes floatGentle {
    0%, 100% {
      transform: translate(0, 0) rotate(0deg);
    }
    33% {
      transform: translate(15px, -15px) rotate(5deg);
    }
    66% {
      transform: translate(-10px, 10px) rotate(-5deg);
    }
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .elegant-divider {
      gap: 0.75rem;
      margin: clamp(1.5rem, 4vw, 2.5rem) 0;
    }

    .divider-ornament {
      font-size: clamp(0.9rem, 2.2vw, 1.1rem);
    }

    .names-connector {
      gap: 0.75rem;
    }

    .connector-line {
      width: clamp(50px, 12vw, 80px);
    }

    .lavender-flower {
      opacity: 0.1;
    }

    .lavender-dot {
      opacity: 0.15;
    }

    .butterfly {
      width: clamp(30px, 4vw, 50px);
      height: clamp(30px, 4vw, 50px);
      opacity: 0.4;
    }
  }

  @media (max-width: 640px) {
    .wedding-invitation {
      padding: clamp(1rem, 3vw, 1.5rem);
    }

    .invitation-container {
      padding: clamp(2rem, 5vw, 3rem) clamp(1.5rem, 4vw, 2rem);
    }

    .names-section {
      margin: clamp(2rem, 5vw, 3rem) 0;
    }

    .name-block {
      margin: clamp(1rem, 3vw, 2rem) 0;
    }

    .name-main {
      font-size: clamp(1.9rem, 6.5vw, 3rem);
    }

    .name-surname {
      font-size: clamp(1.3rem, 3.8vw, 1.8rem);
    }

    .invitation-text {
      margin: clamp(2rem, 5vw, 3rem) 0;
    }

    .invitation-line-1 {
      font-size: clamp(1rem, 2.5vw, 1.3rem);
    }

    .invitation-line-2 {
      font-size: clamp(1.2rem, 3.2vw, 1.6rem);
    }

    .details-section {
      margin: clamp(2rem, 5vw, 3rem) 0;
      gap: clamp(0.9rem, 2vw, 1.2rem);
    }

    .detail-card {
      flex-direction: column;
      text-align: center;
      gap: clamp(1rem, 2.5vw, 1.3rem);
      padding: clamp(1.3rem, 3vw, 1.8rem);
    }

    .detail-card:hover {
      transform: translateY(-3px);
