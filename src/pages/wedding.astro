---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <link rel="stylesheet" href="/styles/fonts.css" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&display=swap" rel="stylesheet">
  
  <main class="wedding-invitation" dir="rtl" lang="fa">
    <!-- Elegant Background Pattern -->
    <div class="background-pattern"></div>
    <div class="lavender-elements">
      <div class="lavender-flower flower-1">✿</div>
      <div class="lavender-flower flower-2">✿</div>
      <div class="lavender-flower flower-3">✿</div>
      <div class="lavender-dot dot-1"></div>
      <div class="lavender-dot dot-2"></div>
      <div class="lavender-dot dot-3"></div>
    </div>

    <!-- Animated Butterflies -->
    <div class="butterflies-container">
      <svg class="butterfly butterfly-1" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="butterflyGrad1" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#b19cd9;stop-opacity:0.8" />
            <stop offset="50%" style="stop-color:#d4c4e8;stop-opacity:0.6" />
            <stop offset="100%" style="stop-color:#8b7ba8;stop-opacity:0.8" />
          </linearGradient>
        </defs>
        <!-- Left wing -->
        <ellipse cx="30" cy="50" rx="25" ry="35" fill="url(#butterflyGrad1)" opacity="0.7"/>
        <ellipse cx="25" cy="45" rx="15" ry="20" fill="#d4c4e8" opacity="0.5"/>
        <!-- Right wing -->
        <ellipse cx="70" cy="50" rx="25" ry="35" fill="url(#butterflyGrad1)" opacity="0.7"/>
        <ellipse cx="75" cy="45" rx="15" ry="20" fill="#d4c4e8" opacity="0.5"/>
        <!-- Body -->
        <ellipse cx="50" cy="50" rx="3" ry="40" fill="#8b7ba8" opacity="0.8"/>
        <!-- Antennae -->
        <line x1="50" y1="10" x2="45" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.6"/>
        <line x1="50" y1="10" x2="55" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.6"/>
        <circle cx="45" cy="20" r="2" fill="#8b7ba8" opacity="0.6"/>
        <circle cx="55" cy="20" r="2" fill="#8b7ba8" opacity="0.6"/>
      </svg>

      <svg class="butterfly butterfly-2" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="butterflyGrad2" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#d4c4e8;stop-opacity:0.7" />
            <stop offset="50%" style="stop-color:#b19cd9;stop-opacity:0.5" />
            <stop offset="100%" style="stop-color:#8b7ba8;stop-opacity:0.7" />
          </linearGradient>
        </defs>
        <!-- Left wing -->
        <ellipse cx="30" cy="50" rx="25" ry="35" fill="url(#butterflyGrad2)" opacity="0.6"/>
        <ellipse cx="25" cy="45" rx="15" ry="20" fill="#b19cd9" opacity="0.4"/>
        <!-- Right wing -->
        <ellipse cx="70" cy="50" rx="25" ry="35" fill="url(#butterflyGrad2)" opacity="0.6"/>
        <ellipse cx="75" cy="45" rx="15" ry="20" fill="#b19cd9" opacity="0.4"/>
        <!-- Body -->
        <ellipse cx="50" cy="50" rx="3" ry="40" fill="#8b7ba8" opacity="0.7"/>
        <!-- Antennae -->
        <line x1="50" y1="10" x2="45" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.5"/>
        <line x1="50" y1="10" x2="55" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.5"/>
        <circle cx="45" cy="20" r="2" fill="#8b7ba8" opacity="0.5"/>
        <circle cx="55" cy="20" r="2" fill="#8b7ba8" opacity="0.5"/>
      </svg>

      <svg class="butterfly butterfly-3" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="butterflyGrad3" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#8b7ba8;stop-opacity:0.6" />
            <stop offset="50%" style="stop-color:#b19cd9;stop-opacity:0.4" />
            <stop offset="100%" style="stop-color:#d4c4e8;stop-opacity:0.6" />
          </linearGradient>
        </defs>
        <!-- Left wing -->
        <ellipse cx="30" cy="50" rx="25" ry="35" fill="url(#butterflyGrad3)" opacity="0.5"/>
        <ellipse cx="25" cy="45" rx="15" ry="20" fill="#d4c4e8" opacity="0.3"/>
        <!-- Right wing -->
        <ellipse cx="70" cy="50" rx="25" ry="35" fill="url(#butterflyGrad3)" opacity="0.5"/>
        <ellipse cx="75" cy="45" rx="15" ry="20" fill="#d4c4e8" opacity="0.3"/>
        <!-- Body -->
        <ellipse cx="50" cy="50" rx="3" ry="40" fill="#8b7ba8" opacity="0.6"/>
        <!-- Antennae -->
        <line x1="50" y1="10" x2="45" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.4"/>
        <line x1="50" y1="10" x2="55" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.4"/>
        <circle cx="45" cy="20" r="2" fill="#8b7ba8" opacity="0.4"/>
        <circle cx="55" cy="20" r="2" fill="#8b7ba8" opacity="0.4"/>
      </svg>

      <svg class="butterfly butterfly-4" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="butterflyGrad4" x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style="stop-color:#b19cd9;stop-opacity:0.65" />
            <stop offset="50%" style="stop-color:#d4c4e8;stop-opacity:0.45" />
            <stop offset="100%" style="stop-color:#8b7ba8;stop-opacity:0.65" />
          </linearGradient>
        </defs>
        <!-- Left wing -->
        <ellipse cx="30" cy="50" rx="25" ry="35" fill="url(#butterflyGrad4)" opacity="0.55"/>
        <ellipse cx="25" cy="45" rx="15" ry="20" fill="#b19cd9" opacity="0.35"/>
        <!-- Right wing -->
        <ellipse cx="70" cy="50" rx="25" ry="35" fill="url(#butterflyGrad4)" opacity="0.55"/>
        <ellipse cx="75" cy="45" rx="15" ry="20" fill="#b19cd9" opacity="0.35"/>
        <!-- Body -->
        <ellipse cx="50" cy="50" rx="3" ry="40" fill="#8b7ba8" opacity="0.65"/>
        <!-- Antennae -->
        <line x1="50" y1="10" x2="45" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.45"/>
        <line x1="50" y1="10" x2="55" y2="20" stroke="#8b7ba8" stroke-width="1.5" opacity="0.45"/>
        <circle cx="45" cy="20" r="2" fill="#8b7ba8" opacity="0.45"/>
        <circle cx="55" cy="20" r="2" fill="#8b7ba8" opacity="0.45"/>
      </svg>
    </div>

    <!-- Main Content Container -->
    <div class="invitation-container">
      <!-- Header Section with Elegant Divider -->
      <div class="header-section">
        <div class="elegant-divider">
          <div class="divider-line"></div>
          <div class="divider-ornament">✦</div>
          <div class="divider-line"></div>
        </div>
      </div>

      <!-- Names Section - Elegant Typography -->
      <div class="names-section">
        <div class="name-block name-block-1">
          <div class="name-main">سید محمد جواد</div>
          <div class="name-surname">بطحایی</div>
          </div>
        
        <div class="names-connector">
          <div class="connector-line"></div>
          <div class="connector-heart">♥</div>
          <div class="connector-line"></div>
        </div>
        
        <div class="name-block name-block-2">
          <div class="name-main">شقایق</div>
          <div class="name-surname">دوالقدری</div>
        </div>
      </div>

      <!-- Invitation Text - Elegant Calligraphy Style -->
      <div class="invitation-text">
        <p class="invitation-line-1">با کمال مسرت و خوشحالی</p>
        <p class="invitation-line-2">شما را به جشن ازدواج خود دعوت می‌کنیم</p>
      </div>

      <!-- Details Section - Minimalist Cards -->
      <div class="details-section">
        <div class="detail-card">
          <div class="detail-icon-wrapper">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <rect x="3" y="4" width="18" height="18" rx="2"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          </div>
          <div class="detail-info">
            <div class="detail-label">تاریخ</div>عحیشفث صثییهدل حشلث
            <div class="detail-value">جمعه، ۷ آذر ۱۴۰۴</div>
          </div>
        </div>

        <div class="detail-card">
          <div class="detail-icon-wrapper">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <circle cx="12" cy="12" r="10"/>
              <line x1="12" y1="12" x2="12" y2="6"/>
              <line x1="12" y1="12" x2="16" y2="12"/>
          </svg>
          </div>
          <div class="detail-info">
            <div class="detail-label">ساعت</div>
            <div class="detail-value">19:00 تا 22:00</div>
          </div>
        </div>

        <a class="detail-card detail-card-link" href="https://neshan.org/maps/share/_bvr_GYxMBRG" target="_blank">
          <div class="detail-icon-wrapper">
            <svg class="detail-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
              <circle cx="12" cy="10" r="3"/>
          </svg>
          </div>
          <div class="detail-info">
            <div class="detail-label">مکان</div>
            <div class="detail-value">تالار عروسی هویزه</div>
            <div class="detail-subvalue">خیابان باغستان، پونک، تهران</div>
          </div>
        </a>
      </div>

      <!-- Elegant Footer -->
      <div class="footer-section">
        <div class="elegant-divider">
          <div class="divider-line"></div>
          <div class="divider-ornament">✦</div>
          <div class="divider-line"></div>
        </div>
        
      <div class="closing-message">
          <p class="closing-text">ما مشتاقیم که این لحظه زیبا را با شما سهیم شویم</p>
        <div class="signature">
            <p class="signature-text">با عشق</p>
            <p class="signature-names">محمد جواد و شقایق</p>
        </div>
      </div>
      </div>
    </div>
  </main>
</Layout>

<style>
  :root {
    /* Elegant Color Palette */
    --color-primary: #2c2c2c;
    --color-secondary: #8b7355;
    --color-accent: #d4af37;
    --color-lavender: #b19cd9;
    --color-lavender-light: #d4c4e8;
    --color-lavender-dark: #8b7ba8;
    --color-lavender-bg: #f5f2f9;
    --color-text: #3a3a3a;
    --color-text-light: #6b6b6b;
    --color-bg: #faf9f7;
    --color-bg-pattern: #f5f3f0;
    --color-border: #e8e6e3;
    --color-shadow: rgba(0, 0, 0, 0.05);
    --color-shadow-hover: rgba(0, 0, 0, 0.1);
    --color-lavender-shadow: rgba(177, 156, 217, 0.2);
  }

  .wedding-invitation {
    min-height: 100vh;
    min-height: 100dvh;
    background: var(--color-bg);
    position: relative;
    overflow-x: hidden;
    overflow-y: auto;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(1.5rem, 4vw, 3rem);
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", "Segoe UI", serif;
    font-feature-settings: "kern" 1;
    text-rendering: optimizeLegibility;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Elegant Background Pattern */
  .background-pattern {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(139, 115, 85, 0.03) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(177, 156, 217, 0.04) 0%, transparent 60%);
    background-size: 100% 100%;
    pointer-events: none;
    z-index: 0;
  }

  /* Lavender Decorative Elements */
  .lavender-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .lavender-flower {
    position: absolute;
    color: var(--color-lavender);
    font-size: clamp(2rem, 5vw, 3.5rem);
    opacity: 0.15;
    animation: floatGentle 15s ease-in-out infinite;
  }

  .lavender-flower.flower-1 {
    top: 15%;
    right: 10%;
    animation-delay: 0s;
  }

  .lavender-flower.flower-2 {
    top: 60%;
    left: 8%;
    animation-delay: 5s;
    font-size: clamp(1.5rem, 4vw, 2.5rem);
  }

  .lavender-flower.flower-3 {
    bottom: 20%;
    right: 15%;
    animation-delay: 10s;
    font-size: clamp(1.8rem, 4.5vw, 3rem);
  }

  .lavender-dot {
    position: absolute;
    width: clamp(8px, 1.5vw, 12px);
    height: clamp(8px, 1.5vw, 12px);
    background: var(--color-lavender);
    border-radius: 50%;
    opacity: 0.2;
    animation: floatGentle 12s ease-in-out infinite;
  }

  .lavender-dot.dot-1 {
    top: 25%;
    left: 20%;
    animation-delay: 2s;
  }

  .lavender-dot.dot-2 {
    top: 70%;
    right: 25%;
    animation-delay: 7s;
  }

  .lavender-dot.dot-3 {
    bottom: 30%;
    left: 15%;
    animation-delay: 4s;
  }

  /* Butterflies Container */
  .butterflies-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  .butterfly {
    position: absolute;
    width: clamp(40px, 5vw, 60px);
    height: clamp(40px, 5vw, 60px);
    opacity: 0.6;
    filter: drop-shadow(0 2px 4px rgba(177, 156, 217, 0.3));
  }

  /* Butterfly 1 - Diagonal path from top-left to bottom-right */
  .butterfly-1 {
    top: -10%;
    left: -5%;
    animation: butterflyPath1 25s ease-in-out infinite;
    animation-delay: 0s;
  }

  @keyframes butterflyPath1 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.8);
      opacity: 0;
    }
    10% {
      opacity: 0.6;
    }
    25% {
      transform: translate(30vw, 25vh) rotate(15deg) scale(1);
    }
    50% {
      transform: translate(60vw, 50vh) rotate(-10deg) scale(0.9);
    }
    75% {
      transform: translate(90vw, 75vh) rotate(20deg) scale(1.1);
    }
    90% {
      opacity: 0.6;
    }
    100% {
      transform: translate(110vw, 110vh) rotate(0deg) scale(0.8);
      opacity: 0;
    }
  }

  /* Butterfly 2 - Curved path from top-right to bottom-left */
  .butterfly-2 {
    top: -10%;
    right: -5%;
    animation: butterflyPath2 30s ease-in-out infinite;
    animation-delay: 5s;
  }

  @keyframes butterflyPath2 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.9);
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    20% {
      transform: translate(-20vw, 30vh) rotate(-20deg) scale(1);
    }
    40% {
      transform: translate(-40vw, 45vh) rotate(25deg) scale(1.1);
    }
    60% {
      transform: translate(-60vw, 60vh) rotate(-15deg) scale(0.95);
    }
    80% {
      transform: translate(-85vw, 80vh) rotate(30deg) scale(1.05);
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: translate(-110vw, 110vh) rotate(0deg) scale(0.9);
      opacity: 0;
    }
  }

  /* Butterfly 3 - Zigzag path from left to right */
  .butterfly-3 {
    top: 40%;
    left: -10%;
    animation: butterflyPath3 28s ease-in-out infinite;
    animation-delay: 10s;
  }

  @keyframes butterflyPath3 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.85);
      opacity: 0;
    }
    10% {
      opacity: 0.55;
    }
    20% {
      transform: translate(25vw, -15vh) rotate(18deg) scale(1);
    }
    35% {
      transform: translate(45vw, 10vh) rotate(-22deg) scale(1.05);
    }
    50% {
      transform: translate(65vw, -8vh) rotate(15deg) scale(0.95);
    }
    65% {
      transform: translate(80vw, 5vh) rotate(-18deg) scale(1.1);
    }
    80% {
      transform: translate(95vw, -3vh) rotate(12deg) scale(1);
    }
    90% {
      opacity: 0.55;
    }
    100% {
      transform: translate(115vw, 0vh) rotate(0deg) scale(0.85);
      opacity: 0;
    }
  }

  /* Butterfly 4 - Wave path from bottom-left to top-right */
  .butterfly-4 {
    bottom: -10%;
    left: -5%;
    animation: butterflyPath4 32s ease-in-out infinite;
    animation-delay: 15s;
  }

  @keyframes butterflyPath4 {
    0% {
      transform: translate(0, 0) rotate(0deg) scale(0.9);
      opacity: 0;
    }
    10% {
      opacity: 0.5;
    }
    25% {
      transform: translate(30vw, -20vh) rotate(-25deg) scale(1.05);
    }
    40% {
      transform: translate(50vw, -35vh) rotate(20deg) scale(0.95);
    }
    55% {
      transform: translate(70vw, -50vh) rotate(-18deg) scale(1.1);
    }
    70% {
      transform: translate(85vw, -65vh) rotate(22deg) scale(1);
    }
    85% {
      transform: translate(100vw, -80vh) rotate(-15deg) scale(0.9);
    }
    90% {
      opacity: 0.5;
    }
    100% {
      transform: translate(115vw, -110vh) rotate(0deg) scale(0.9);
      opacity: 0;
    }
  }

  /* Wing flapping animation */
  .butterfly svg {
    animation: wingFlap 0.3s ease-in-out infinite;
  }

  .butterfly-1 svg {
    animation-duration: 0.25s;
  }

  .butterfly-2 svg {
    animation-duration: 0.28s;
    animation-delay: 0.05s;
  }

  .butterfly-3 svg {
    animation-duration: 0.32s;
    animation-delay: 0.1s;
  }

  .butterfly-4 svg {
    animation-duration: 0.27s;
    animation-delay: 0.08s;
  }

  @keyframes wingFlap {
    0%, 100% {
      transform: scaleY(1);
    }
    50% {
      transform: scaleY(0.85);
    }
  }

  /* Main Container */
  .invitation-container {
    max-width: min(700px, 95vw);
    width: 100%;
    background: #ffffff;
    padding: clamp(3rem, 8vw, 5rem) clamp(2rem, 5vw, 4rem);
    box-shadow: 
      0 10px 40px var(--color-shadow),
      0 0 0 1px var(--color-border);
    position: relative;
    z-index: 1;
    animation: fadeInUp 0.8s ease-out;
  }

  /* Elegant Divider */
  .elegant-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: clamp(2rem, 5vw, 3rem) 0;
  }

  .divider-line {
    flex: 1;
    height: 1px;
    background: linear-gradient(
      to left,
      transparent,
      var(--color-lavender) 15%,
      var(--color-secondary) 50%,
      var(--color-lavender) 85%,
      transparent
    );
    opacity: 0.4;
  }

  .divider-ornament {
    color: var(--color-lavender);
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    opacity: 0.6;
    font-weight: 300;
    letter-spacing: 0;
    text-shadow: 0 0 10px var(--color-lavender-shadow);
  }

  /* Header Section */
  .header-section {
    margin-bottom: clamp(1.5rem, 4vw, 2.5rem);
  }

  /* Names Section */
  .names-section {
    text-align: center;
    margin: clamp(2.5rem, 6vw, 4rem) 0;
    animation: fadeIn 1s ease-out 0.2s both;
  }

  .name-block {
    margin: clamp(1.5rem, 4vw, 2.5rem) 0;
  }

  .name-main {
    font-size: clamp(2.2rem, 7vw, 3.5rem);
    font-weight: 600;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-lavender-dark) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.3;
    margin-bottom: 0.5rem;
    letter-spacing: 0;
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", serif;
  }

  .name-surname {
    font-size: clamp(1.4rem, 4vw, 2rem);
    font-weight: 400;
    color: var(--color-text-light);
    line-height: 1.4;
    letter-spacing: 0;
    margin-top: 0.3rem;
    font-family: "Vazir", "Tanha", "Shabnam", "Tahoma", "Arial", serif;
  }

  .name-block-1 {
    animation: fadeInLeft 0.8s ease-out 0.4s both;
  }

  .name-block-2 {
    animation: fadeInRight 0.8s ease-out 0.6s both;
  }

  /* Names Connector */
  .names-connector {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin: clamp(1.5rem, 4vw, 2.5rem) 0;
    animation: fadeIn 1s ease-out 0.5s both;
